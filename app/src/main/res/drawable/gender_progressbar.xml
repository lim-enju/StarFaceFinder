<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <scale android:scaleWidth="100%"
            android:top="1dp"
            android:bottom="1dp"
            android:left="1dp"
            android:right="1dp">
            <scale android:scaleWidth="100%">
                <shape>
                    <corners android:radius="10dp"/>
                </shape>
            </scale>
        </scale>
    </item>
</layer-list>